<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/frame"

        android:padding="10dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên tour: "
            android:textSize="25dp"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/edt_tour_name_form"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColorHint="#656361"
            android:background="@drawable/custombtn1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên của bạn: "
            android:textSize="25dp"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/edt_fullname_form"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColorHint="#656361"
            android:background="@drawable/custombtn1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng: "
            android:textSize="25dp"
            android:layout_marginLeft="10dp"/>


        <EditText
            android:id="@+id/edt_form"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColorHint="#656361"
            android:background="@drawable/custombtn1"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá: "
                    android:textSize="25dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_price_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="30dp"/>
            </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại: "
            android:textSize="25dp"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/edt_phone_form"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint=""
            android:textColorHint="#656361"
            android:background="@drawable/custombtn1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="25dp"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/edt_email_form"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:textColorHint="#656361"
            android:background="@drawable/custombtn1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_book_tour_form"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:text="Đặt tour"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custombtn2" />
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:text="Hủy"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custombtn2" />
        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>