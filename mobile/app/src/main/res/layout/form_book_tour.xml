<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:padding="30dp"
    tools:context=".ui.domestic.FormBookTourFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Tên tour"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_tour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_semibold"/>
        </com.google.android.material.textfield.TextInputLayout>
<!--        <com.google.android.material.textfield.TextInputLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->

<!--            android:hint="Tên của bạn"-->
<!--            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">-->

<!--            <com.google.android.material.textfield.TextInputEditText-->
<!--                android:id="@+id/full_name"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"/>-->
<!--        </com.google.android.material.textfield.TextInputLayout>-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng: "
                    android:layout_marginTop="13dp"
                    android:textSize="25dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/nunito_sans_semibold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">
                    <ImageButton
                        android:id="@+id/btn_decrease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_remove_24"
                        />
                    <EditText
                        android:id="@+id/amount"
                        android:layout_width="50dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/custombtn1"
                        android:hint="0"
                        android:gravity="center"
                        android:backgroundTint="@color/black_200"
                        />
                    <ImageButton
                        android:id="@+id/btn_increase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_add_24"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/validate_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF0909"
                android:visibility="gone"
                android:fontFamily="@font/nunito_sans_semibold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá: "
                    android:textSize="25dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/nunito_sans_semibold"/>
                <TextView
                    android:id="@+id/tv_price_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="30dp"
                    android:fontFamily="@font/nunito_sans_semibold"/>
            </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Số điện thoại"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_semibold"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/validate_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0909"
            android:visibility="gone"
            android:fontFamily="@font/nunito_sans_semibold"/>
<!--        <com.google.android.material.textfield.TextInputLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->

<!--            android:hint="Email"-->
<!--            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">-->

<!--            <com.google.android.material.textfield.TextInputEditText-->
<!--                android:id="@+id/email"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"/>-->
<!--        </com.google.android.material.textfield.TextInputLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <Button
                style="@style/Widget.AppCompat.Light.ActionButton"
                android:id="@+id/btn_book_tour_form"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:text="Đặt tour"
                android:textAllCaps="false"
                android:layout_weight="2"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custombtn2"
                app:backgroundTint="#5584AC"
                android:fontFamily="@font/nunito_sans_semibold"/>
            <Button
                style="@style/Widget.AppCompat.Light.ActionButton"
                android:id="@+id/btn_cancel"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:text="Hủy"
                android:layout_weight="2"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custombtn2"
                app:backgroundTint="#5584AC"
                android:fontFamily="@font/nunito_sans_semibold"/>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>