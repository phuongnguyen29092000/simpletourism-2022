<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardMaxElevation="12dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_history"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name_tour_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textSize="@dimen/text_size"
                android:fontFamily="@font/nunit_sans_extrabold"
                android:maxLines="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Giá: "
                        android:textSize="@dimen/text_size"
                        android:fontFamily="@font/nunito_sans_semibold"/>/>

                    <TextView
                        android:id="@+id/tv_price_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="@dimen/text_size"
                        android:fontFamily="@font/nunito_sans_semibold"/>
                        />

                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Ngày đặt: "
                    android:textSize="@dimen/text_size"
                    android:fontFamily="@font/nunito_sans_semibold"/>/>

                <TextView
                    android:id="@+id/tv_booking_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="@dimen/text_size"
                    android:fontFamily="@font/nunito_sans_semibold"/>
                />

            </LinearLayout>


            <Button
                android:id="@+id/btn_rate_history"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Đánh giá"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:background="@drawable/custombtn2"
                android:fontFamily="@font/nunito_sans_semibold"/>
            <Button
                android:id="@+id/btn_payment"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Thanh toán"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:background="@drawable/custombtn2"
                android:fontFamily="@font/nunito_sans_semibold"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:text="Text View"
                android:textSize="@dimen/text_size"
                android:fontFamily="@font/nunit_sans_extrabold"/>/>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>